.content .sub-title {
  font-size: 80rpx;
  font-weight: 600;
  color: #646566;
  opacity: 0.4;
  position: relative;
}
.content .product-container {
  padding: 0 30rpx;
  background-color: #323233;
}
.content .product-container .card-container {
  width: 100%;
  height: 540rpx;
  display: flex;
  flex-direction: column;
  -webkit-transform: translateY(-30rpx);
          transform: translateY(-30rpx);
}
.content .product-container .card-container .card-content {
  flex: 1;
  border-radius: 24rpx;
  border-bottom-left-radius: 0;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: row;
}
.content .product-container .card-container .card-content .card-image {
  width: 470rpx;
  height: 470rpx;
}
.content .product-container .card-container .card-tail {
  width: 100%;
  height: 26rpx;
  background-color: #fff;
  position: relative;
  overflow: hidden;
}
.content .product-container .card-container .card-tail::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 70rpx;
  border-top-left-radius: 36rpx;
  background-color: #323233;
}
.content .product-container .title {
  color: #fff;
}
.content .product-container .price {
  margin: 30rpx 0 50rpx;
  font-size: 41.6rpx;
  color: #fff;
  font-weight: 600;
}
.content .product-container .share-btn {
  width: 600rpx;
  height: 40px;
  border-radius: 40rpx;
  background-color: #18ceb5;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: row;
  font-weight: 600;
}
.content .product-container .tips {
  font-size: 24rpx;
  text-align: center;
  padding: 30rpx 0 50rpx;
  color: #c8c9cc;
}
.content .count-down-container {
  height: 180rpx;
  overflow: hidden;
}
.content .count-down-container .count-down {
  background-color: #fff;
  width: 690rpx;
  margin: 0 auto;
  align-items: center;
  border-radius: 24rpx;
  -webkit-transform: translateY(-24rpx);
          transform: translateY(-24rpx);
  box-shadow: 0px 0px 10px #c8c9cc;
}
.content .count-down-container .count-down .cd-sub-title {
  text-align: center;
  line-height: 1;
  color: #dcdee0;
}
.content .count-down-container .count-down .cd-detail {
  margin-left: 20rpx;
  padding: 20rpx 0 24rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
}
.content .count-down-container .count-down .cd-detail .cd-time {
  display: flex;
  align-items: center;
  margin-left: 10rpx;
}
.content .count-down-container .count-down .cd-detail .cd-time .time {
  width: 50rpx;
  height: 46rpx;
  line-height: 46rpx;
  text-align: center;
  background-color: #323233;
  color: #fff;
  margin: 0 6rpx;
  border-radius: 12rpx;
}
.content .count-down-container .count-down .cd-detail .cd-time .colon {
  font-weight: bolder;
  font-size: 32rpx;
}
.content .count-down-container .count-down .time-limit {
  height: 40rpx;
  line-height: 40rpx;
  font-size: 20rpx;
  background-color: #323233;
  padding: 0 16rpx;
  color: #fff;
  margin-left: auto;
  border-top-left-radius: 20rpx;
  border-bottom-left-radius: 20rpx;
}
.content .overlay {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.4);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: row;
}

